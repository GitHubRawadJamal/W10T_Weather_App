<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.W10T_Weather_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/medium_purple</item>
        <item name="colorOnPrimary">@color/light_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tvWeatherInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#771288</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">@dimen/margin_very_small</item>
    </style>

    <style name="descriptionWeatherInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_units</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">@dimen/margin_very_small</item>
    </style>

</resources>